<link rel="stylesheet" href="static\driverDetails.css" type="text/css"/>
<body>
<h1 class="text-center">DRIVER DETAILS</h1>
<div class="container">
  
    <table class="table table-striped mt-4">
        
        <a href="addNewDriver">
            <button class="btn btn-success">Add Driver</button>

        </a>
        
        <tr>
            <th>id</th>
            <th>driver name</th>
            <th>liscense number</th>
            <th>email</th>
            <th>address</th>
            <th>dob</th>
            <th>gender</th>
            <th>password</th>
        </tr>
    
        {{#each driverDetails}}
        <tr>
            <td>{{this.dataValues.driver_Id}}</td>
            <td>{{this.dataValues.driverName}}</td>
            <td>{{this.dataValues.driverLiceneceNo}}</td>
            <td>{{this.dataValues.driverEmail}}</td>
            <td>{{this.dataValues.driverAddress}}</td>
            <td>{{this.dataValues.driverDob}}</td>
            <td>{{this.dataValues.driverGender}}</td>
            <td>
                 {{!-- <a href="/update"><button class="btn btn-primary">Edit</button></a>  --}}
                <a href="editdriver/{{this.dataValues.driver_Id}}"><button class="btn btn-primary">Edit</button></a>|
                <br>
                <br>
                <a href="deletedriver/{{this.dataValues.driver_Id}}" onclick="return confirm('Are you sure to delete this? ')"><button class="btn btn-primary">Delete</button></a>|
            </td>
        </tr>

        {{/each}} 

    </table>

</div>
</body>